
@model EmployeeViewModel


<form action="/employee/delete" method="post" class="row">
    <h3>Are you sure to delete data for @Model.Name?</h3>
    <input type="hidden" asp-for=Id />
    <a href="/employee/hr" class="btn btn-success">Cancel</a>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
